@model MVCApp.Models.Cena

@{
    ViewData["Title"] = "Edit";
}

<h1>Izmeni cenu</h1>

@*<h4>Cena</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="DatumOd" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <input asp-for="DatumDo" class="form-control"  type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="Iznos" class="control-label"></label>
                <input asp-for="Iznos" class="form-control" />
                <span asp-validation-for="Iznos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lajsna.NazivLajsne" class="control-label"></label>
                @Html.DropDownListFor(model => model.Lajsna.Id, (IEnumerable<SelectListItem>)ViewBag.Lajsne, new { @class = "form-control" })
                @*<input asp-for="TabelName" class="form-control" />*@
            </div>
            <div class="form-group">
                <input type="submit" value="Izmeni cenu lajsne" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Lajsna">Odustani</a>
</div>

